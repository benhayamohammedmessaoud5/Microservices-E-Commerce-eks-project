pipeline {
    agent any 

    environment {
        // --- CONFIGURATION AWS ACADEMY ---
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
        AWS_SESSION_TOKEN     = credentials('aws-session-token')
        AWS_REGION            = "us-east-1"
        
        // --- CONFIGURATION PROJET ---
        ACCOUNT_ID    = "590183765444" // Votre ID de compte
        IMAGE_NAME    = "emailservice"
        REPO_URL      = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${IMAGE_NAME}"
        
        // --- CONFIGURATION GITHUB ---
        GIT_USER_NAME = "benhayamohammedmessaoud5"
        GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
        GIT_EMAIL     = "benhayamessaoud51@gmail.com" // Votre email github
        YAML_FILE     = "emailservice.yaml"
    }

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                // On utilise votre propre fork
                git branch: 'master', url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
            }
        }

        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/emailservice') {
                        sh 'docker system prune -f'
                        sh 'docker build -t ${IMAGE_NAME} .'
                    }
                }
            }
        }

        stage("ECR Image Pushing") {
            steps {
                script {
                    // Authentification Docker avec les clés AWS du bloc environment
                    sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
                    
                    // Tag et Push vers VOTRE repository ECR
                    sh "docker tag ${IMAGE_NAME}:latest ${REPO_URL}:${BUILD_NUMBER}"
                    sh "docker push ${REPO_URL}:${BUILD_NUMBER}"
                }
            }
        }

        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    // Utilise votre token Git stocké dans Jenkins
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            
                            # Mise à jour de l'image dans le fichier YAML Kubernetes
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            # Envoi des changements vers votre GitHub
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                        """
                    }
                }
            }
        }
    }
}